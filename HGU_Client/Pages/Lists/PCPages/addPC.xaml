<Page x:Class="HGU_Client.Pages.Lists.PCPages.addPC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HGU_Client.Pages.Lists.PCPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="addPC">

    <Grid>
        <StackPanel>
            <TextBlock Text="Выбранный элемент"  />
            <TextBlock Text="Наименование" />
            <TextBox Name="txt_model"/>
            <TextBlock Text="Сборка"/>
            <ComboBox Name="cb_spec"/>
            <TextBlock Text="Колличество"/>
            <TextBox Name="txt_Count"/>
            <TextBlock Text="Кабинет"/>
            <TextBox Name="txt_Office"/>
            <StackPanel Orientation="Horizontal">
                <Button Name="btn_Save" Content="Сохранить" Margin="0,5,5,5" Click="btn_Save_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
