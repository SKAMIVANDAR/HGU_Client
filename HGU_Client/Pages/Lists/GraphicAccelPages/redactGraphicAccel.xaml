<Page x:Class="HGU_Client.Pages.Lists.GraphicAccelPages.redactGraphicAccel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HGU_Client.Pages.Lists.GraphicAccelPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="redactGraphicAccel">

    <Grid>
        <StackPanel>
            <TextBlock Text="Выбранный элемент"  />
            <TextBlock Text="Модель" />
            <TextBox Name="txt_model"/>
            <TextBlock Text="Производитель"/>
            <ComboBox Name="cb_idGraphicManufacturer"/>
            <TextBlock Text="Тип видеопроцессора:"/>
            <ComboBox Name="cb_idtypeOfGraphicsAccel"/>
            <TextBlock Text="Тип памяти"/>
            <ComboBox Name="cb_idTypeVideoMemory"/>
            <TextBlock Text="Объем видеопамяти"/>
            <TextBox Name="txt_VideoMemorySize"/>
            <TextBlock Text="Колличество"/>
            <TextBox Name="txt_Count"/>
            <StackPanel Orientation="Horizontal">
                <Button Name="btn_Save" Content="Сохранить" Margin="0,5,5,5" Click="btn_Save_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
