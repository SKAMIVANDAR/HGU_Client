<Page x:Class="HGU_Client.Pages.Lists.SpecPages.addSpec"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HGU_Client.Pages.Lists.SpecPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="addSpec">

    <Grid>
        <StackPanel>
            <TextBlock Text="Выбранный элемент"  />
            <TextBlock Text="Наименование" />
            <TextBox Name="txt_model"/>
            <TextBlock Text="Процессор"/>
            <ComboBox Name="cb_Cpu"/>
            <TextBlock Text="Оперативная память"/>
            <ComboBox Name="cb_Ram"/>
            <TextBlock Text="Видеокарта"/>
            <ComboBox Name="cb_Graphic"/>
            <TextBlock Text="Накопитель"/>
            <ComboBox Name="cb_Datadrives"/>
            <StackPanel Orientation="Horizontal">
                <Button Name="btn_Save" Content="Сохранить" Margin="0,5,5,5" Click="btn_Save_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
